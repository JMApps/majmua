<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/fajr"
            android:paddingEnd="8dp"
            android:contentDescription="@string/prayer_fajr"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/fajr_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/prayer_fajr"
            android:textColor="@color/iconTextColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/fajr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nullTime"
            android:textColor="@color/iconTextColor"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/duha"
            android:paddingEnd="8dp"
            android:contentDescription="@string/prayer_sunrise"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/sunrise_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/prayer_sunrise"
            android:textColor="@color/iconTextColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/sunrise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nullTime"
            android:textColor="@color/iconTextColor"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/dhuhr"
            android:paddingEnd="8dp"
            android:contentDescription="@string/prayer_dhuhr"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/dhuhr_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/prayer_dhuhr"
            android:textColor="@color/iconTextColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/dhuhr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nullTime"
            android:textColor="@color/iconTextColor"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/asr"
            android:paddingEnd="8dp"
            android:contentDescription="@string/prayer_asr"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/asr_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/prayer_asr"
            android:textColor="@color/iconTextColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/asr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nullTime"
            android:textColor="@color/iconTextColor"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/maghrib"
            android:paddingEnd="8dp"
            android:contentDescription="@string/prayer_maghrib"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/maghrib_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/prayer_maghrib"
            android:textColor="@color/iconTextColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/maghrib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nullTime"
            android:textColor="@color/iconTextColor"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/isha"
            android:paddingEnd="8dp"
            android:contentDescription="@string/prayer_isha"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/isha_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/prayer_isha"
            android:textColor="@color/iconTextColor"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/isha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nullTime"
            android:textColor="@color/iconTextColor"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/countdown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:gravity="center"
        android:textColor="#DE4040"
        android:textSize="12sp"
        android:visibility="gone" />
</LinearLayout>
